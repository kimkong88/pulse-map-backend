model Report {
    id        String       @id @default(uuid())
    type      ReportType
    status    ReportStatus
    code      String       @unique
    data      Json
    input     Json
    userId    String?
    user      User?        @relation(fields: [userId], references: [id])
    createdAt DateTime     @default(now())
    updatedAt DateTime     @updatedAt
}

enum ReportType {
    personal
    compatibility
    forecast
    forecast_14day
}

enum ReportStatus {
    pending
    in_progress
    completed
    failed
}
